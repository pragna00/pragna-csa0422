#include <stdio.h>
#include <stdbool.h>

#define MAX_PROCESSES 10
#define MAX_RESOURCES 10

int n, m; // Number of processes and resources
int available[MAX_RESOURCES]; // Available instances of each resource
int maximum[MAX_PROCESSES][MAX_RESOURCES]; // Max demand of each process
int allocation[MAX_PROCESSES][MAX_RESOURCES]; // Resources currently allocated
int need[MAX_PROCESSES][MAX_RESOURCES]; // Remaining need

// Function to calculate Need matrix
void calculateNeed() {
    for (int i = 0; i < n; i++)
        for (int j = 0; j < m; j++)
            need[i][j] = maximum[i][j] - allocation[i][j];
}

// Function to check if the system is in a safe state
bool isSafe() {
    int work[MAX_RESOURCES];
    bool finish[MAX_PROCESSES];

    for (int i = 0; i < m; i++)
        work[i] = available[i];

    for (int i = 0; i < n; i++)
        finish[i] = false;

    int count = 0;
    while (count < n) {
        bool found = false;
        for (int p = 0; p < n; p++) {
            if (!finish[p]) {
                bool canAllocate = true;
                for (int r = 0; r < m; r++) {
                    if (need[p][r] > work[r]) {
                        canAllocate = false;
                        break;
                    }
                }
                if (canAllocate) {
                    for (int r = 0; r < m; r++)
                        work[r] += allocation[p][r];
                    finish[p] = true;
                    found = true;
                    count++;
                    printf("Process %d is executing...\n", p);
                }
            }
        }
        if (!found) {
            printf("System is NOT in a safe state!\n");
            return false;
        }
    }
    printf("System is in a safe state.\n");
    return true;
}

// Function to handle resource request
void requestResources() {
    int process;
    printf("Enter process number making the request (0-%d): ", n - 1);
    scanf("%d", &process);

    int request[MAX_RESOURCES];
    printf("Enter request for each resource: ");
    for (int i = 0; i < m; i++)
        scanf("%d", &request[i]);

    // Check if request <= need
    for (int i = 0; i < m; i++) {
        if (request[i] > need[process][i]) {
            printf("Error: Process has exceeded its maximum claim.\n");
            return;
        }
    }

    // Check if request <= available
    for (int i = 0; i < m; i++) {
        if (request[i] > available[i]) {
            printf("Resources not available. Process must wait.\n");
            return;
        }
    }

    // Pretend allocation
    for (int i = 0; i < m; i++) {
        available[i] -= request[i];
        allocation[process][i] += request[i];
        need[process][i] -= request[i];
    }

    // Check if safe
    if (isSafe()) {
        printf("Request granted.\n");
    } else {
        // Rollback
        for (int i = 0; i < m; i++) {
            available[i] += request[i];
            allocation[process][i] -= request[i];
            need[process][i] += request[i];
        }
        printf("Request cannot be granted safely. Rolled back.\n");
    }
}

int main() {
    printf("Enter number of processes: ");
    scanf("%d", &n);
    printf("Enter number of resources: ");
    scanf("%d", &m);

    printf("Enter available instances of each resource: ");
    for (int i = 0; i < m; i++)
        scanf("%d", &available[i]);

    printf("Enter maximum demand matrix (process x resources):\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < m; j++)
            scanf("%d", &maximum[i][j]);

    printf("Enter allocation matrix (process x resources):\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < m; j++)
            scanf("%d", &allocation[i][j]);

    calculateNeed();
    printf("\nInitial Safety Check:\n");
    isSafe();

    int choice;
    while (1) {
        printf("\n1. Request Resources\n2. Exit\nEnter choice: ");
        scanf("%d", &choice);
        if (choice == 1)
            requestResources();
        else
            break;
    }

    return 0;
}
