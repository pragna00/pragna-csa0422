#include <stdio.h>

int main() {
    int n, frames, i, j, k, flag, pos = 0, faults = 0;

    printf("Enter number of pages: ");
    scanf("%d", &n);
    int pages[n];
    printf("Enter the page reference string: ");
    for (i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    printf("Enter number of frames: ");
    scanf("%d", &frames);
    int mem[frames];

    // Initialize memory frames
    for (i = 0; i < frames; i++)
        mem[i] = -1;

    printf("\nPage Replacement Process (FIFO):\n");
    printf("Page -> Memory Frames\n");

    for (i = 0; i < n; i++) {
        flag = 0;
        // Check if page already exists in memory
        for (j = 0; j < frames; j++) {
            if (mem[j] == pages[i]) {
                flag = 1;
                break;
            }
        }

        // If page not found in memory, replace the oldest one
        if (flag == 0) {
            mem[pos] = pages[i];
            pos = (pos + 1) % frames; // Move FIFO pointer
            faults++;
        }

        // Print current memory frames
        printf("%d\t", pages[i]);
        for (k = 0; k < frames; k++) {
            if (mem[k] != -1)
                printf("%d ", mem[k]);
            else
                printf("- ");
        }
        if (flag == 0)
            printf(" <-- Page Fault");
        printf("\n");
    }

    printf("\nTotal Page Faults: %d\n", faults);

    return 0;
}
