#include <stdio.h>

int main() {
    int n, m;
    
    printf("Enter number of memory blocks: ");
    scanf("%d", &n);
    int blocks[n];
    printf("Enter size of each memory block: ");
    for (int i = 0; i < n; i++)
        scanf("%d", &blocks[i]);

    printf("Enter number of processes: ");
    scanf("%d", &m);
    int processes[m];
    printf("Enter size of each process: ");
    for (int i = 0; i < m; i++)
        scanf("%d", &processes[i]);

    int allocation[m];
    for (int i = 0; i < m; i++)
        allocation[i] = -1; // -1 indicates process not allocated

    // First Fit Allocation
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            if (blocks[j] >= processes[i]) {
                allocation[i] = j;
                blocks[j] -= processes[i];
                break; // Stop at first suitable block
            }
        }
    }

    // Display Allocation
    printf("\nProcess No.\tProcess Size\tBlock No.\n");
    for (int i = 0; i < m; i++) {
        printf("%d\t\t%d\t\t", i + 1, processes[i]);
        if (allocation[i] != -1)
            printf("%d\n", allocation[i] + 1);
        else
            printf("Not Allocated\n");
    }

    return 0;
}
