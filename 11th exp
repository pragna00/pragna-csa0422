#include <stdio.h>
#include <pthread.h>
#include <unistd.h>

// Thread function 1
void* threadFunc1(void* arg) {
    for (int i = 1; i <= 5; i++) {
        printf("Thread 1: Count %d\n", i);
        sleep(1);  // slows down to show concurrency
    }
    return NULL;
}

// Thread function 2
void* threadFunc2(void* arg) {
    for (int i = 1; i <= 5; i++) {
        printf("Thread 2: Count %d\n", i);
        sleep(1);
    }
    return NULL;
}

int main() {
    pthread_t t1, t2;

    // Create two threads
    pthread_create(&t1, NULL, threadFunc1, NULL);
    pthread_create(&t2, NULL, threadFunc2, NULL);

    // Wait for threads to finish
    pthread_join(t1, NULL);
    pthread_join(t2, NULL);

    printf("Both threads have completed execution.\n");

    return 0;
}
