#include <stdio.h>

struct process {
    int pid;            // Process ID
    int at;             // Arrival Time
    int bt;             // Burst Time
    int rt;             // Remaining Time
    int ct;             // Completion Time
    int tat;            // Turnaround Time
    int wt;             // Waiting Time
};

int main() {
    int n, tq, time = 0, completed = 0;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct process p[n];

    for (int i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("\nEnter Arrival Time for P%d: ", i + 1);
        scanf("%d", &p[i].at);
        printf("Enter Burst Time for P%d: ", i + 1);
        scanf("%d", &p[i].bt);
        p[i].rt = p[i].bt;
    }

    printf("\nEnter Time Quantum: ");
    scanf("%d", &tq);

    int queue[100], front = 0, rear = 0;
    int visited[n];

    for (int i = 0; i < n; i++)
        visited[i] = 0;

    // Add first arriving processes to the queue
    for (int i = 0; i < n; i++) {
        if (p[i].at == 0) {
            queue[rear++] = i;
            visited[i] = 1;
        }
    }

    while (completed < n) {

        if (front == rear) {  
            time++;           // CPU idle
            for (int i = 0; i < n; i++)
                if (p[i].at == time && visited[i] == 0) {
                    queue[rear++] = i;
                    visited[i] = 1;
                }
            continue;
        }

        int idx = queue[front++];
        
        // Execute process for time quantum or remaining time
        if (p[idx].rt > tq) {
            p[idx].rt -= tq;
            time += tq;
        } else {
            time += p[idx].rt;
            p[idx].rt = 0;
            p[idx].ct = time;
            p[idx].tat = p[idx].ct - p[idx].at;
            p[idx].wt = p[idx].tat - p[idx].bt;
            completed++;
        }

        // Add NEWLY arrived processes to the queue
        for (int i = 0; i < n; i++) {
            if (p[i].at <= time && visited[i] == 0) {
                queue[rear++] = i;
                visited[i] = 1;
            }
        }

        // If process still has remaining time, push it back to queue
        if (p[idx].rt > 0) {
            queue[rear++] = idx;
        }
    }

    printf("\nPID\tAT\tBT\tCT\tTAT\tWT\n");
    float avg_wt = 0, avg_tat = 0;

    for (int i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\t%d\n",
               p[i].pid, p[i].at, p[i].bt,
               p[i].ct, p[i].tat, p[i].wt);

        avg_wt += p[i].wt;
        avg_tat += p[i].tat;
    }

    printf("\nAverage Waiting Time = %.2f", avg_wt / n);
    printf("\nAverage Turnaround Time = %.2f\n", avg_tat / n);

    return 0;
}
