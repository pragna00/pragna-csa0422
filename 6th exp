#include <stdio.h>

struct process {
    int pid;        // Process ID
    int bt;         // Burst time
    int at;         // Arrival time
    int pr;         // Priority (lower = higher priority)
    int rt;         // Remaining time
};

int main() {
    int n, time = 0, completed = 0, i;
    float avg_wt = 0, avg_tat = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct process p[n];

    for (i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("\nEnter Arrival Time for P%d: ", i + 1);
        scanf("%d", &p[i].at);
        printf("Enter Burst Time for P%d: ", i + 1);
        scanf("%d", &p[i].bt);
        printf("Enter Priority for P%d (lower = higher priority): ", i + 1);
        scanf("%d", &p[i].pr);
        p[i].rt = p[i].bt;   // remaining time initially = burst time
    }

    int wt[n], tat[n], ct[n];

    while (completed != n) {
        int highest = -1;
        int min_priority = 999999;

        // Find process with highest priority (preemptive)
        for (i = 0; i < n; i++) {
            if (p[i].at <= time && p[i].rt > 0 && p[i].pr < min_priority) {
                min_priority = p[i].pr;
                highest = i;
            }
        }

        if (highest == -1) {
            // No process has arrived, idle CPU
            time++;
            continue;
        }

        // Execute process for 1 unit (preemptive)
        p[highest].rt--;

        // If process finishes
        if (p[highest].rt == 0) {
            completed++;
            ct[highest] = time + 1;  // completion time
            tat[highest] = ct[highest] - p[highest].at;
            wt[highest] = tat[highest] - p[highest].bt;
        }

        time++;
    }

    printf("\nPID\tAT\tBT\tPR\tCT\tTAT\tWT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\t%d\t%d\n",
               p[i].pid, p[i].at, p[i].bt, p[i].pr,
               ct[i], tat[i], wt[i]);

        avg_wt += wt[i];
        avg_tat += tat[i];
    }

    printf("\nAverage Waiting Time = %.2f", avg_wt / n);
    printf("\nAverage Turnaround Time = %.2f\n", avg_tat / n);

    return 0;
}
