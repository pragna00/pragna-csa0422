#include <stdio.h>

struct process {
    int pid;    // Process ID
    int bt;     // Burst time
    int at;     // Arrival time
    int wt;     // Waiting time
    int tat;    // Turnaround time
    int completed; // 0 = not completed, 1 = completed
};

int main() {
    int n, i, count = 0, time = 0, min_bt, next_process;
    float avg_wt = 0, avg_tat = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct process p[n];

    for (i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("\nEnter Arrival Time of P%d: ", i + 1);
        scanf("%d", &p[i].at);
        printf("Enter Burst Time of P%d: ", i + 1);
        scanf("%d", &p[i].bt);
        p[i].completed = 0;
    }

    while (count < n) {
        min_bt = 99999;
        next_process = -1;

        // Select process with minimum BT among those that have arrived
        for (i = 0; i < n; i++) {
            if (p[i].at <= time && p[i].completed == 0 && p[i].bt < min_bt) {
                min_bt = p[i].bt;
                next_process = i;
            }
        }

        if (next_process == -1) {
            // CPU idle until a process arrives
            time++;
            continue;
        }

        // Process selected runs to completion
        p[next_process].wt = time - p[next_process].at;
        time += p[next_process].bt;
        p[next_process].tat = time - p[next_process].at;
        p[next_process].completed = 1;
        count++;
    }

    printf("\nPID\tAT\tBT\tWT\tTAT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\n",
               p[i].pid, p[i].at, p[i].bt, p[i].wt, p[i].tat);
        avg_wt += p[i].wt;
        avg_tat += p[i].tat;
    }

    printf("\nAverage Waiting Time = %.2f\n", avg_wt / n);
    printf("Average Turnaround Time = %.2f\n", avg_tat / n);

    return 0;
}
