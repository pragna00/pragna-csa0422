#include <stdio.h>
#include <pthread.h>
#include <unistd.h>

#define N 5  // Number of philosophers

pthread_mutex_t forks[N]; // Mutex for each fork
pthread_t philosophers[N];

void* philosopher(void* num) {
    int id = *(int*)num;

    while (1) {
        printf("Philosopher %d is thinking.\n", id);
        sleep(1); // Thinking

        // Deadlock avoidance: pick lower-numbered fork first
        int left = id;
        int right = (id + 1) % N;

        if (id % 2 == 0) { // Even philosophers pick left first
            pthread_mutex_lock(&forks[left]);
            printf("Philosopher %d picked up left fork %d.\n", id, left);
            pthread_mutex_lock(&forks[right]);
            printf("Philosopher %d picked up right fork %d.\n", id, right);
        } else {          // Odd philosophers pick right first
            pthread_mutex_lock(&forks[right]);
            printf("Philosopher %d picked up right fork %d.\n", id, right);
            pthread_mutex_lock(&forks[left]);
            printf("Philosopher %d picked up left fork %d.\n", id, left);
        }

        // Eating
        printf("Philosopher %d is eating.\n", id);
        sleep(2);

        // Put down forks
        pthread_mutex_unlock(&forks[left]);
        pthread_mutex_unlock(&forks[right]);
        printf("Philosopher %d has put down forks and is back to thinking.\n", id);

        sleep(1); // Thinking again
    }

    return NULL;
}

int main() {
    int i;
    int ids[N];

    // Initialize mutexes (forks)
    for (i = 0; i < N; i++)
        pthread_mutex_init(&forks[i], NULL);

    // Create philosopher threads
    for (i = 0; i < N; i++) {
        ids[i] = i;
        pthread_create(&philosophers[i], NULL, philosopher, &ids[i]);
    }

    // Wait for all threads (this simulation runs infinitely)
    for (i = 0; i < N; i++)
        pthread_join(philosophers[i], NULL);

    // Destroy mutexes (never reached in this infinite simulation)
    for (i = 0; i < N; i++)
        pthread_mutex_destroy(&forks[i]);

    return 0;
}
