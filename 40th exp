#include <stdio.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <unistd.h>
#include <stdlib.h>

// Function to print file permissions
void printPermissions(const char *filename) {
    struct stat fileStat;
    
    if(stat(filename, &fileStat) < 0) {
        perror("stat");
        return;
    }

    printf("Permissions for %s: ", filename);

    // File type
    printf( (S_ISDIR(fileStat.st_mode)) ? "d" : "-");
    
    // Owner permissions
    printf( (fileStat.st_mode & S_IRUSR) ? "r" : "-");
    printf( (fileStat.st_mode & S_IWUSR) ? "w" : "-");
    printf( (fileStat.st_mode & S_IXUSR) ? "x" : "-");
    
    // Group permissions
    printf( (fileStat.st_mode & S_IRGRP) ? "r" : "-");
    printf( (fileStat.st_mode & S_IWGRP) ? "w" : "-");
    printf( (fileStat.st_mode & S_IXGRP) ? "x" : "-");
    
    // Others permissions
    printf( (fileStat.st_mode & S_IROTH) ? "r" : "-");
    printf( (fileStat.st_mode & S_IWOTH) ? "w" : "-");
    printf( (fileStat.st_mode & S_IXOTH) ? "x" : "-");
    
    printf("\n");
}

int main() {
    const char *filename = "sample.txt";

    // Create a file
    FILE *fp = fopen(filename, "w");
    if(fp == NULL) {
        perror("fopen");
        exit(1);
    }
    fprintf(fp, "This is a sample file.\n");
    fclose(fp);

    printf("File '%s' created.\n", filename);

    // Display initial permissions
    printPermissions(filename);

    // Change permissions: rwxr-x---
    if(chmod(filename, S_IRUSR | S_IWUSR | S_IXUSR |  // Owner: rwx
                        S_IRGRP | S_IXGRP             // Group: r-x
                        ) < 0) {
        perror("chmod");
    } else {
        printf("Permissions changed successfully.\n");
    }

    // Display updated permissions
    printPermissions(filename);

    return 0;
}
